{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "collection_response.schema.json",
    "$comment": "https://distributed-text-services.github.io/specifications/versions/1-alpha/#collection-endpoint",
    "type": "object",
    "properties": {
        "title": {"type": "string"},
        "@id": {
            "type": "string",
            "format": "uri"
        },
        "@type": {
            "type": "string",
            "pattern": "^(Collection|Resource)$"
        },
        "dtsVersion": {"type": "string"},
        "totalChildren": {"type": "number"},
        "totalParents": {"type": "number"},
        "description": {"type": "string"},
        "member": {
            "type": "array",
            "items": {
                "$ref": "#"
            }
        },
        "dublinCore": {
            "type": "object"
        },
        "extensions": {
            "type": "object"
        },
        "document": {
            "type": "string",
            "format": "uri-template"
        },
        "navigation": {
            "type": "string",
            "format": "uri-template"
        },
        "collection": {
            "type": "string",
            "format": "uri-template"
        },
        "download": {
            "anyOf": [
                {"type": "string",
                 "format": "uri"},
                {"type": "array",
                 "items": {
                    "type": "string",
                    "format": "uri"
                 }
                }
            ]
        },
        "citationTrees":{
            "$ref": "resource.schema.json#/properties/citationTrees"
        }
    },
    "required": [
        "title", "@id", "@type", "totalChildren", "totalParents"
    ]
}